<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_placeholder_dark" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/notification_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:text="placeholder text"
            android:textColor="@android:color/secondary_text_dark_nodisable"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notification_text_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:text="placeholder text"
            android:textColor="@android:color/secondary_text_dark_nodisable"
            android:textSize="@dimen/font_small" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="22dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/notification_button_skip_previous_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/notification_button_play"
        android:src="@drawable/ic_skip_previous_vector" />


    <ImageView
        android:id="@+id/notification_button_play_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/notification_button_play"
        android:src="@drawable/ic_play_vector" />

    <ImageView
        android:id="@+id/notification_button_skip_next_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/notification_button_skip"
        android:src="@drawable/ic_skip_next_vector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|top"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/notification_button_close_small"
            android:layout_width="@dimen/notification_icon_dimen_small"
            android:layout_height="@dimen/notification_icon_dimen_small"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />


    </LinearLayout>

</LinearLayout>
