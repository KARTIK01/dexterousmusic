<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    android:paddingLeft = "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    tools:context = ".fragment.AlbumFragment"
    >


    <ImageView
        android:id = "@+id/album_fragment_album_art"
        android:layout_width = "200dp"
        android:layout_height = "200dp"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true"
        android:scaleType = "centerCrop"
        />

    <music.dexterous.com.dexterousmusic.customeviews.widget.FontTextView
        android:id = "@+id/album_fragment_total_songs"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textSize = "@dimen/text_large"
        />

    <music.dexterous.com.dexterousmusic.customeviews.widget.FontTextView
        android:id = "@+id/album_fragment_total_songs_duration"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_below = "@+id/album_fragment_total_songs"
        android:textSize = "@dimen/text_large"
        />


    <android.support.v7.widget.RecyclerView
        android:id = "@+id/album_fragment_recycler_view"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_below = "@+id/album_fragment_album_art"
        />

</RelativeLayout >
