<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/medium_space">

    <music.dexterous.com.dexterousmusic.customeviews.FontTextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/song_duration"
        android:ellipsize="end"
        android:lines="1"
        android:orientation="vertical"
        android:textSize="20sp"
        app:fontName="Calibri-light.ttf"
        tools:text="Song Name Song" />

    <music.dexterous.com.dexterousmusic.customeviews.FontTextView
        android:id="@+id/song_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/song_name"
        android:lines="1"
        android:orientation="vertical"
        android:textSize="20sp"
        app:fontName="Calibri-light.ttf"
        tools:text="Song Album Song Album Song Album" />

    <music.dexterous.com.dexterousmusic.customeviews.FontTextView
        android:id="@+id/dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_name"
        android:layout_toRightOf="@+id/song_album"
        android:orientation="vertical"
        android:text="-"
        android:textSize="20sp"
        app:fontName="Calibri-light.ttf" />

    <music.dexterous.com.dexterousmusic.customeviews.FontTextView
        android:id="@+id/song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_name"
        android:layout_toRightOf="@+id/dash"
        android:ellipsize="end"
        android:lines="1"
        android:orientation="vertical"
        android:textSize="20sp"
        app:fontName="Calibri-light.ttf"
        tools:text="Song Artist Song Artist Song Artist" />


    <music.dexterous.com.dexterousmusic.customeviews.FontTextView
        android:id="@+id/song_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/showPopup"
        android:orientation="vertical"
        android:textSize="20sp"
        app:fontName="Calibri-light.ttf"
        tools:text="5.30" />

    <ImageView
        android:id="@+id/showPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_dots_vertical_vector" />

    <music.dexterous.com.dexterousmusic.customeviews.audiowaves.Visualizer xmlns:aw="http://schemas.android.com/apk/res-auto"
        android:id="@+id/music_visulazer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/song_duration"
        android:layout_toLeftOf="@+id/showPopup"
        android:visibility="gone"
        aw:aw_color_gradient_end="@color/VISUALIZER_END_COLOR"
        aw:aw_color_gradient_start="@color/VISUALIZER__START_COLOR"
        aw:aw_color_is_gradient="true"
        aw:aw_color_uniform="@color/VISUALIZER_COLOR_HERE"
        aw:aw_format="vertical_lines"
        aw:aw_gravity="center"
        aw:aw_height="200"
        aw:aw_line_border_radius="0"
        aw:aw_line_height="30"
        aw:aw_line_min_height="30"
        aw:aw_line_min_with="10"
        aw:aw_line_spacing="2"
        aw:aw_line_with="30"
        aw:aw_num_waves="3"
        aw:aw_width="40" />

</RelativeLayout>